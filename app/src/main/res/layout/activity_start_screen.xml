<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.insa.pi.brainbeats.StartScreen">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center|top">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma musique"
            android:id="@+id/ma_musique"
            android:layout_weight="1"
            android:textSize="@dimen/menu_button"
            android:onClick="startMaMusique" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ecoute"
            android:id="@+id/ecoute"
            android:layout_weight="1"
            android:textSize="@dimen/menu_button"
            android:onClick="startEcoute"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aprentissage"
            android:id="@+id/aprentissage"
            android:layout_weight="1"
            android:textSize="@dimen/menu_button"
            android:onClick="startAprentissage"/>
    </LinearLayout>
</FrameLayout>
